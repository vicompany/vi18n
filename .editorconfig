root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{json,jscsrc,jshintrc}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 0
trim_trailing_whitespace = false
