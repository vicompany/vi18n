{
  "name": "vi18n",
  "version": "1.0.0",
  "description": "Simple number, currency and date formatters based on the Internationalization API",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicompany/vi18n.git"
  },
  "main": "dist/vi18n.min.js",
  "homepage": "https://github.com/vicompany/vi18n",
  "scripts": {
    "build:js": "babel src -d dist",
    "build": "npm run clean && npm run build:js && npm run minify",
    "clean": "rimraf dist/*",
    "lint": "eslint src/*.js --fix",
    "minify": "uglifyjs dist/vi18n.js --compress --mangle --source-map --output dist/vi18n.min.js",
    "test": "nyc ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "watch": "ava --watch"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "ecma-402",
    "vi-company"
  ],
  "author": "VI Company",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-vi": "^6.0.0",
    "intl": "^1.2.5",
    "intl-locales-supported": "^1.0.0",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.2",
    "uglify-es": "^3.0.15"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ],
    "source": [
      "src/**/*.js",
      "!dist/**/*"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "require": [
      "babel-register",
      "./test/helpers/intl.js"
    ],
    "babel": "inherit"
  }
}
